                                        <input type="hidden" name="old_images[]" value="<%= image %>">
                                        <input class="form-control" type="file" accept="image/*" id="image<%= index %>" name="images" onchange="previewImage(event, '<%= index %>')">
                                    </div>
                                <% }) %>
                            </div>
                            <div>
                                <label class="form-label">Choose Additional Images</label>
                                <input class="form-control" type="file" accept="image/*" id="new-images" name="images" multiple>
                            </div>
                        </div>                        
                    </div>                                      
                </div><input type="hidden" name="product_id" value="<%= product.id %>">
