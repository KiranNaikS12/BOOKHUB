        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products grid</h2>
                </div>
                <div>
                    <a href="/admin/product/draft" class="btn btn-light rounded font-md">Drafts</a>
                    <a href="/admin/product/add" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <article class="itemlist">
                        <% product.forEach((productItem) => { %>
                            <div class="row align-items-center">
                                <div class="col col-check flex-grow-0">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                    </div>
                                </div>
                                <div class="col-lg-4 col-sm-4 col-8 flex-grow-1 col-name">
                                    <a class="itemside" href="/admin/product/edit?id=<%= productItem._id %>">
                                        <div class="left">
                                            <img src="/assets-admin/productImages/<%= productItem.images[productItem.images.length-1]%>" class="img-sm img-thumbnail" alt="Item" max-width="100px">
                                        </div>
                                        <div class="info">
                                            <h6 class="mb-0"><%= productItem.title %></h6>
                                        </div>
                                    </a>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-price"> <span></span>Rs.<%= productItem.afterDiscount %>/-</div>
                                
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <span class="badge rounded-pill <%= productItem.status === 'active' ? 'alert-success' : (productItem.status === 'inactive' ? 'alert-warning' : 'alert-danger') %>">
                                        <%= productItem.status %>
                                    </span>
                                </div> 
                                                              
                                <div class="col-lg-1 col-sm-2 col-4 col-date">
                                    <span><%= productItem.updated_at.toDateString() %></span>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <!--  -->
                                    <a href="#" onclick="confirmSoftDelete('<%= productItem._id %>')" class="btn btn-sm font-sm btn-light rounded">
                                        <i class="material-icons md-delete_forever"></i> Delete
                                    </a>
                                </div>
                            </div>
                            <hr>
                        <% }) %> 
                    <hr>
                </div>               
            </div> 
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% for(let i = 1; i<=totalPages;i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : ' ' %>">
                                <a class="page-link" href="/admin/product/lists?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
