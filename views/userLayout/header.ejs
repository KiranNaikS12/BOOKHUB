    <script>
        $(document).ready(function (){
    $('#searchInput').on('input', function () {
        console.log('Input event fired');
        const query = $(this).val().trim();
        if (query.length >= 1) {
            $.get('/search', { query: query }, function(data) {
                console.log('Received search results:', data);
                $('#searchResults').empty();
                data.forEach(function(product) {
                    // Highlight the matched text in the product title
                    const highlightedTitle = product.title.replace(new RegExp(query, 'gi'), match => `<span class="highlight">${match}</span>`);
                    // Append the search result with the highlighted title
                    $('#searchResults').append('<div data-product-id="' + product._id + '">' + highlightedTitle + '</div>');
                });
                $('#searchResults').show();
            });
        } else {
            $('#searchResults').empty().hide();
        }
    });

    // Event listener for clicking on a search result
    $(document).on('click', '#searchResults div', function() {
        console.log('Clicked on search result');
        const productId = $(this).data('product-id');
        window.location.href = '/product/view?id=' + productId;
    });

    // Event listener for Enter key press
    $('#searchInput').keypress(function(event) {
        if (event.which === 13) {
            const productId = $('#searchResults div:first').data('product-id');
            window.location.href = '/product/view?id=' + productId;
        }
    });
}); 



</script>
