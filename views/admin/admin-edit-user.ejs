        <section class="content-main mt-80 mb-80" >
            <div class="card mx-auto card-login">
                <div class="card-body w-100" >
                    <h4 class="card-title mb-4 text-center fs-1" style="font-family: 'Times New Roman', Times, serif;">Edit User</h4>
                    <% if(typeof message !== 'undefined'){ %>
                        <h4 style="color: red; font-family: 'Times New Roman', Times, serif;"><%=message %></h4>
                    <% } %>
                    <form accept="" method="post">
                        <div class="mb-3">
                            <label class="form-label">Firstname</label>
                            <input class="form-control" placeholder="Firstname" type="text" name="firstname" value="<%= user.firstname %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Lastname</label>
                            <input class="form-control" placeholder="Lastname" type="text" name="lastname" value="<%= user.lastname %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input class="form-control" placeholder="Username" type="text" name="username" value="<%= user.username %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" placeholder="Email" type="text" name="email" value="<%= user.email %>">
                        </div> 
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input class="form-control" placeholder="Phone no." type="text" name="mobile" value="<%= user.mobile %>">
                        </div> 
                        <div class="mb-3">
                            <label class="form-label">Unblock</label>
                            <input type="radio" name="verify" value="1" <% if(user.is_verified ===1){%> checked <%} %>>
                            <label class="form-label">Block</label>
                            <input type="radio" name="verify" value="0" <% if(user.is_verified ===0){%> checked <%} %>>
                        </div> 
                        <input type="hidden" name="id" value="<%= user._id %>">
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100">Update User</button>
                        </div> 
                    </form>
                    
            </div>
        </section>
