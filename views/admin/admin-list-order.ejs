    <script>
        function removeOrderData(orderId){
        console.log(orderId);
        swal.fire({
            title: "Are you sure?",
            text: "Do you want to delete the order",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Confrim'
        }).then((result) => {
            if(result.isConfirmed){
                fetch('/admin/remove-orderdata',{
                    method:'POST',
                    headers:{
                        'Content-type':'application/json'
                    },
                    body:JSON.stringify({
                        orderId
                    })
                })
                .then((response) => {
                    if(response.ok){
                        return response.json()
                    }else{
                        throw new Error('Network response was not ok.')
                    }
                })
                .then((data) => {
                    if(data.success){
                        swal.fire({
                                title: 'Order is deleted',
                                text: '',
                                icon: "success",
                                type: 'success',
                                timer: 1500,
                                timerProgressBar: true,
                            }).then(() => {
                                window.location.reload();
                        });
                    }else{
                        swal.fire('Error deleting Order', data.message, 'error');
                    }
                })
                .catch((error) => {
                        swal.fire('Error', 'An error occurred while deleting the order', 'error');
                        console.error('Fetch Error:', error);
                });
            }
        })
    }
</script>
