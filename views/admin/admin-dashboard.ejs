      <section class="profile-container-1">
        <div class="profile-table-1">
            <div class="profile-heading-1">
                <h1>User Profiles</h1>
            </div>
    
            <table>
                <tr>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Action</th>
                    <th>Account</th>
                </tr>
    
                <% if(users.length > 0){ for(let i = 0;i<users.length;i++){ %>
                <tr>
                    <td><%= users[i].firstname %></td>
                    <td><%= users[i].lastname %></td>
                    <td><%= users[i].username %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].mobile %></td>
                    <td>
                        <% if(users[i].is_verified === 1){ %>
                        <p>Verified</p>
                        <% }else{ %>
                        <p>Not Verified</p>
                        <% } %>
                    </td>
                    <td> <a href="/admin/edit/user?id=<%= users[i]._id %>">Edit</a> </td>
                    <td> <a href="/admin/remove/user?id=<%= users[i]._id %>" style="color:red">Delete</a> </td>
                </tr>
                <% } }else{ %>
                <tr>
                    <td colspan="6">Users Not Found</td>
                </tr>
                <% } %>
                <a href="/admin/new-user"><button class="edit-button btn btn-primary">  Add User</button></a>
                
            </table>
        </div>
    </section>
       
