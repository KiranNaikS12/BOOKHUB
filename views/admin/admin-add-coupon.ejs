    <script>
        async function addCoupon(){
        const couponData = {
            name: document.querySelector('input[name="couponName"]').value,
            startDate: document.querySelector('input[name="startDate"]').value,
            endDate: document.querySelector('input[name="endDate"]').value,
            minimumAmount:document.querySelector('input[name="minAmount"]').value,
            maximumAmount:document.querySelector('input[name="maxAmount"]').value,
            discount: document.querySelector('input[name="discount"]').value,
        }

        console.log(couponData);
        const errors = validateCouponData(couponData);

        //To Display validation messages
        for(const field in errors){
            const errorMessage = errors[field];
            const errorElement = document.getElementById(`${field}Error`);
            errorElement.textContent = errorMessage; 
            errorElement.style.color = 'red';
            if (errorMessage) {
               errorElement.style.display = 'block';
               setTimeout(() => {
                errorElement.style.display = 'none';
            }, 1500);
            } else {
                errorElement.style.display = 'none';
            }
        }

        // Check if there are any validation errors
        const hasErrors = Object.values(errors).some(error => error !== '');
        if(hasErrors){
            return;
        }

        try{
            const response = await fetch('/admin/add/coupon',{
                method:'POST',
                headers: {
                 'Content-Type': 'application/json'
                },
                body:JSON.stringify(couponData)
            })
            if(response.status === 200){
               toastr.success('Coupon added successfully');
               setTimeout(() =>{
                window.location.reload()
               },1500)
            }else{
               toastr.error('Failed to add coupon')
            }
            }catch(error){
                toastr.error('An error occured while adding coupon')
            }
        }

    function validateCouponData(data){
        const errors = {};

        if(!data.name.trim()){
            errors.name = 'coupon name is required'
        }else{
            errors.name = '';
        }

        if(!data.startDate){
            errors.startDate = 'Starting date is required';
        }else if(new Date(data.startDate) <= new Date()){
            errors.startDate = "You cannot set the past date"
        }else {
            errors.startDate = '';
        }

        if(!data.endDate){
            errors.endDate = 'Ending date is required';
        }else if(new Date(data.endDate) <= new Date()){
            errors.endDate = "You cannot set the past date";
        }else{
            errors.endDate = ''
        }


        const minAmount = parseFloat(data.minimumAmount);
        const maxAmount = parseFloat(data.maximumAmount);
        const discount = parseFloat(data.discount);
        if(isNaN(minAmount)){
            errors.minimumAmount = 'Minimum amount is required'
        }else if(minAmount < 0){
            errors.minimumAmount = 'Minimum amount cannot be negative'
        }else{
            errors.minimumAmount = '';
        }

        if(isNaN(maxAmount)){
            errors.maximumAmount = 'Maximum amount is required'
        }else if(maxAmount < 0){
            errors.maximumAmount = 'Maximum amount cannot be negative'
        }else{
            errors.maximumAmount = '';
        }

        if(minAmount >= maxAmount){
            errors.minimumAmount = 'Minimum amount must be less than maximum amount';
            errors.maximumAmount = 'Maximum amount must be greater than minimum amount'; 
        }

        if(isNaN(discount)){
            errors.discount = 'Discount is required';
        }else if(discount < 0){
            errors.discount = 'Discount cannot be negative';
        }else{
            errors.discount = '';
        }

        return errors;
    }
