        <section class="content-main">
        <form action="/admin/update/coupon"  method="POST">
            <% if(typeof successMessage !== 'undefined') { %>
                <p style="color:green; font-size: 20px;  font-family: 'Times New Roman', Times, serif;"><%= successMessage %></p>
            <% } else if (typeof errorMessage !== 'undefined') { %>
                <p style="color: red; font-size: 20px;  font-family: 'Times New Roman', Times, serif;" ><%= errorMessage %></p>
            <% } %>
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Update Coupon Details</h2>
                        <div>
                            <button class="btn btn-md rounded font-sm hover-up">UPDATE</button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="name" class="form-label">Coupon Name</label>
                                <input type="text" placeholder="Coupon Name" class="form-control" id="name" name="couponName" value="<%= coupon.name %>">
                                <div class="error-message" id="nameError"></div>
                            </div>
                            <div class="row gx-3">
                                <div class="col-md-4  mb-3 mr-30">
                                    Start Date: <%= new Date(coupon.startDate).toLocaleDateString('en-GB') %>
                                    <input type="date" class="form-control" name="startDate" id="startDate" value="<%= coupon.startDate %>">
                                </div>
                                <div class="col-md-4  mb-3">
                                     End Date: <%= new Date(coupon.endDate).toLocaleDateString('en-GB') %>
                                    <input type="date" class="form-control" name="endDate" id="endDate"  value="<%= coupon.endDate %>">
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="minimumAmount" class="form-label">Minimum Amount</label>
                                    <input type="number" placeholder="Minimum Amount" name="minimumAmount" class="form-control" id="minimumAmount"  value="<%= coupon.minimumAmount %>">
                            </div>
                            <div class="mb-4">
                                <label for="maximumAmount" class="form-label">Maximum Amount</label>
                                <input type="number" placeholder="Maximum Amount" name="maximumAmount" class="form-control" id="maximumAmount"  value="<%= coupon.maximumAmount %>">
                            </div>
                        </div>
                    </div> <!-- card end// -->
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-4">
                                <label for="discount" class="form-label">Discount (%)</label>
                                <input type="number" placeholder="Discount" class="form-control" name="discount" id="discount" value="<%= coupon.discount %>">
                            </div>
                            <h5 class="mb-3">Coupon Status</h5>
                            <div class="mb-3">
                                <input type="radio" name="verify" value="1" <% if(coupon.isActive == 1){%> checked <%} %>>
                                <label class="form-label">Unblock</label>
                                <br>
                                <input type="radio" name="verify" value="0" <% if(coupon.isActive == 0){%> checked <%} %>>
                                <label class="form-label">block</label>
                            </div>                             
                        </div>
                    </div> 
                </div>
                <input type="hidden" name="coupon_id" value="<%= coupon.id %>">
            </div>
        </form>
