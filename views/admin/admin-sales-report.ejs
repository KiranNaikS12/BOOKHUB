                                                <td><%= currentOrder.oId %></td>
                                                <td><%= currentOrder.user.email %></td>
                                                <td><%= currentOrder.orderStatus %></td>
                                                <td><%= productCount %></td>
                                                <td>Rs.<%= totalActualPrice %></td>
                                                <td>Rs.<%= totalOfferPrice %></td>
                                                <% const getCoupon = totalActualPrice - totalOfferPrice; %>
                                                <% const couponAmount = getCoupon - currentOrder.billTotal %>
                                                <!-- Calculate coupon amount here -->
                                                <td><%= couponAmount %></td>
                                                <% if (currentOrder.paymentMethod === 'Cash On Delivery') { %>
                                                    <td>COD</td>
                                                <% } else { %>
                                                    <td><%= currentOrder.paymentMethod  %></td>
                                                <% } %> 
                                                <td><%= currentOrder.billTotal  %></td>
                                            </tr>
                                        <% } %>
                                    <% }) %>
                                <% } else { %>
