            },
            body: JSON.stringify({
                productId,
            })
        });

        if (response.status === 200) {
            window.location.href = '/checkout';
        } else if (response.status === 205) {
            await Swal.fire({
                title: 'Sorry! Out of Stock',
                text: 'Stock limit exceeded',
