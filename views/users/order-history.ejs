 <%- include('../userLayout/header') %> 
 <main>
    <div class="page-header breadcrumb-wrap bg-white">
        <div class="container">
            <div class="breadcrumb">
                <a href="/home" rel="nofollow">Home</a>
                <span></span>
                <a href="/profile">User Profile</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="main-body">          
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src="/assets/imgs/account/profile.jpg" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                          <h4><%= user.username %></h4>
                          <p class="text-secondary mb-1"><%= user.email  %></p>
                          <a href="/logout"><button class="btn cusotm-dark-green">Logout</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <span class="material-symbols-outlined">
                                developer_guide
                                </span>
                            <h6 class="mb-0 text-dark"><a href="/order-history">   MY ORDERS</a></h6>
                        </div>
                    </div>
                  </div>
                  <div class="card mt-3">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <i class="material-symbols-outlined">
                                folder_shared
                            </i>
                            <h6 class="mb-0 text-dark">MY STATUS</h6>
                        </div>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="">My Coupons</a></li>
                            <li class="list-group-item"><a href="">Review and Ratings</a></li>
                            <li class="list-group-item"><a href="">MY Notification</a></li>
                            <li class="list-group-item"><a href="">MY Wishlist</a></li>
                        </ul>
                    </div>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                    </div>                                               
                    <div class="card-body" id="showUserDetails">
                        <div class="card-body" id="showUserDetails">
                            <div class="card-header">
                                <h5 class="mb-0 text-dark">MY ORDERS</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Order ID</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Total</th>
                                                <th>Track Order</th>
                                                <th>Remove</th> 
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let i = 0; i < order.length; i++) { %>
                                                <tr>
                                                    <td><%= order[i].oId %></td>
                                                    <td><%= order[i].orderDate.toDateString() %></td>
                                                    <td><%= order[i].orderStatus %></td>
                                                    <td>Rs<%= order[i].billTotal.toFixed(2) %> for <%= order[i].items.length %> items</td>
                                                    <td class="action" data-title="View">
                                                        <a href="/track-order?id=<%= order[i]._id %>" class="text-primary">View</a>
                                                    </td>
                                                    <td class="action" data-title="Remove">
                                                        <a href="#" class=" text-danger" onclick="removeOrder('<%= order[i]._id %>')">
                                                            <i class="fi-rs-trash"></i>Cancel Order
                                                        </a>
                                                    </td> 
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>                                 
                                </div>
                            </div>
                        </div>                                   
                    </div> 
                </div>  
                <div class="container p-0">
                    <div class="row gutters-sm">
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">                                                         
                                    <% if (user.address && user.address.length > 0) { %>
                                        <div id="currentAddressContainer">
                                            <label for="currentAddress">Current Address:</label>
                                            <p id="currentAddress">
                                                Street:<%= user.address[0].street %>, <%= user.address[0].city %>, <%= user.address[0].country %>
                                                <br>
                                                Pin:<%= user.address[0].postalCode %>
                                            </p>
                                        </div>
                                        <% } else { %>
                                         <p>No Address found.</p>
                                    <% } %>                           
                                </div>                                                                       
                            </div>
                        </div>
                        <div class="col-sm-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <span class="material-symbols-outlined">
                                            credit_card
                                        </span>
                                        <h6 class="mb-0 text-dark">PAYMENTS</h6>
                                    </div>
                                    <ul class="list-group">
                                        <li class="list-group-item"><a href=""> Payment History</a></li>
                                        <li class="list-group-item"><a href=""> Gift Cards</a></li>
                                        <li class="list-group-item"><a href=""> Saved UPI</a></li>
                                        <li class="list-group-item"><a href=""> Saved Cards</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>                    
              </div>   
            </div>
        </div>
</main>   
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function displayNewAddressForm() {
        document.getElementById("showUserDetails").style.display = "none";
        document.getElementById("newAddressForm").style.display = "block";
        document.getElementById('closeAddressFormButton').style.display = "block";
    }

    function displayUserDetails() {
        document.getElementById("newAddressForm").style.display = "none";
        document.getElementById("showUserDetails").style.display = "block";
        document.getElementById('closeAddressFormButton').style.display = "none";
    }

    document.getElementById("addAddressButton").addEventListener("click", function(event) {
        event.preventDefault();
        displayNewAddressForm();
    });

    document.getElementById("closeAddressFormButton").addEventListener("click", function(event) {
        event.preventDefault();
        displayUserDetails();
    });

    function removeOrder(orderId) {
    console.log(orderId);
    swal.fire({
        title: "Are you sure?",
        text: "Do you want to cancel the order",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Confirm'
    }).then((result) => {
        if (result.isConfirmed) {
            swal.fire({
                title: 'Enter Reason for Cancellation',
                input: 'text',
                showCancelButton: true,
                confirmButtonText: 'Confirm',
                cancelButtonText: 'Cancel',
                inputValidator: (value) => {
                    if (!value) {
                        return 'You need to enter a reason before cancellation.'
                    }
                }
            }).then((reasonResult) => {
                if (reasonResult.isConfirmed) {
                    const reason = reasonResult.value;
                    fetch('/orders/:orderId', {
                            method: 'PATCH',
                            headers: {
                                'Content-type': 'application/json'
                            },
                            body: JSON.stringify({
                                orderId,
                                reason 
                            })
                        })
                        .then((response) => {
                            if (response.ok) {
                                return response.json()
                            } else {
                                throw new Error('Network response was not ok.')
                            }
                        })
                        .then((data) => {
                            if (data.success) {
                                swal.fire({
                                    title: 'Order is Canceled',
                                    text: '',
                                    icon: "success",
                                    type: 'success',
                                    timer: 1500,
                                    timerProgressBar: true,
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                swal.fire('Error Canceling Order', data.message, 'error');
                            }
                        })
                        .catch((error) => {
                            swal.fire('Error', 'An error occurred while canceling the order', 'error');
                            console.error('Fetch Error:', error);
                        });
                }
            });
        }
    })
}

</script>   
</body>
</html>
    